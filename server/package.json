    "esbuild": "^0.16.16",
    "esbuild-plugin-sass": "^1.0.1",
    "lexicon": "git+https://f534df08ec35a6569d211a8cf041a9a0fdba02c9:x-oauth-basic@github.com/nitidbit/lexicon.git#2.8.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.7.0"
