{
  "name": "@nitidbit/lexicon",
  "version": "2.12.2",
  "description": "Nitid Lexicon Library for text-based content management via web UI",
  "main": "build/src/index.js",
  "typings": "build/src/index",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nitidbit/lexicon.git"
  },
  "scripts": {
    "test": "jest --verbose --no-watchman",
    "test:watch": "jest --verbose --watch",
    "scss": "sass --update --style=expanded src/:build/src",
    "scss:watch": "npm run scss -- --watch",
    "build": "tsc; npm run scss",
    "build:watch": "tsc --watch --preserveWatchOutput & npm run scss:watch && kill $1",
    "build:watch comment": "the __ & __ && kill $1 is to run both in parallel, and they get interrupted together.",
    "clean": "rm -rf build"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|css|jpg|png|gif)$": "<rootDir>/test/file.mock.js"
    },
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "https://example.com/login"
    }
  },
  "author": "Nitid Bit LLC",
  "license": "CC-BY-SA-4.0",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "18.x",
    "jest": "^29",
    "jest-cli": "^29",
    "jest-environment-jsdom": "^29.7.0",
    "react": "file:../server/node_modules/react",
    "react-dom": "file:../server/node_modules/react-dom",
    "sass": "^1.77.8",
    "ts-jest": "^29",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  }
}
