{
  "name": "@nitidbit/lexicon",
  "version": "2.12.2",
  "description": "Nitid Lexicon Library for text-based content management via web UI",
  "main": "js/index.js",
  "typings": "js/index",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nitidbit/lexicon.git"
  },
  "scripts": {
    "test": "jest --verbose --no-watchman",
    "test:watch": "jest --verbose --watch",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "clean": "rm -rf js"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|css|jpg|png|gif)$": "<rootDir>/file.mock.js"
    },
    "testEnvironment": "jsdom"
  },
  "author": "Nitid Bit LLC",
  "license": "CC-BY-SA-4.0",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "18.x",
    "jest": "^29",
    "jest-cli": "^29",
    "jest-environment-jsdom": "^29.7.0",
    "react": "file:../server/node_modules/react",
    "react-dom": "file:../server/node_modules/react-dom",
    "ts-jest": "^29",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  }
}
