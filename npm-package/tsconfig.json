{
  "version": "3.5.2",
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.sass"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.d.ts",
    "**/*.test.ts"
  ]
}
